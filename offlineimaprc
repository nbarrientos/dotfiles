[general]
# NOTE: cronjob calls the quiet UI with -u
ui = Blinkenlights
accounts = CERN
maxsyncaccounts = 1

[Account CERN]
localrepository = CERN-Local
remoterepository = CERN-Remote
autorefresh = 10

[Repository CERN-Local]
type = Maildir
localfolders = ~/mail/cern

[Repository CERN-Remote]
type = Gmail
remoteuser = nacho.barrientos.cern@gmail.com
realdelete = no
nametrans = lambda folder: re.sub('.*Spam$', 'Spam', 
    re.sub('.*Drafts$', 'Drafts', 
    re.sub('.*Sent Mail$', 'Sent', 
    re.sub('.*Trash$', 'Trash', folder))))
folderfilter = lambda folder: folder not in ['[Gmail]/All Mail', '[Gmail]/Important', '[Gmail]/Starred']
